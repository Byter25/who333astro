---
// ImgLink.astro
import type { ImgLinkProps } from "../types/ImgLinkProps";
const { imageUrl, linkUrl, id } = Astro.props as ImgLinkProps;
const { clase } = Astro.props;
---

<a
  href={linkUrl}
  target="_blank"
  rel="noopener noreferrer"
  id={id}
  class={clase}
>
  <img
    src={imageUrl}
    alt="Imagen enlazada"
    class="w-32 sm:max-w-xs h-auto rounded-lg shadow-md   transition-transform transform hover:scale-105" 
    src="your-image.jpg" 
    alt="description"
  />
</a>
